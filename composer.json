{
	"name": "MyPleasu.re",
	"description": "Simplify to the extreme how your watch videos online.",
	"license": "Copyright 2014-2015 MyPleasu.re",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"barryvdh/laravel-debugbar": "~2.0",
		"laravelcollective/html": "~5.0",
		"tymon/jwt-auth": "0.5.*",
		"barryvdh/laravel-cors": "0.4.x@dev"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"fabpot/goutte": "2.*"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Mypleasure\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
